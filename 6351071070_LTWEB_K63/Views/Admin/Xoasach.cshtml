@model BOOK.Models.SACH

@{
    ViewBag.Title = "Xoasach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* Container chính */
    .container {
        width: 60%;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề */
    h2 {
        text-align: center;
        color: white;
        margin-bottom: 20px;
    }

    /* Thông tin sách */
    dl.dl-horizontal {
        padding: 10px 0;
        display: grid;
        grid-template-columns: 1fr 2fr;
        row-gap: 15px;
    }

    dt {
        font-weight: bold;
        color: white;
        text-align: left;
        padding-right: 20px;
    }

    dd {
        margin: 0;
        padding: 8px;
        background-color: royalblue;
        border-radius: 4px;
    }

    /* Nút hành động */
    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    input[type="submit"] {
        width: 100px;
        padding: 10px;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #c82333;
        }

    a {
        margin-left: 20px;
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
