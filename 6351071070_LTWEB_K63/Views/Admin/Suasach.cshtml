@model BOOK.Models.SACH

@{
    ViewBag.Title = "Suasach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* Container chính của form */
    .form-horizontal {
        width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề */
    h2 {
        text-align: center;
        color: white;
        margin-bottom: 20px;
    }

    /* Nhãn và các trường nhập liệu */
    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .control-label {
        width: 150px;
        font-weight: bold;
        color: #555;
    }

    .form-control,
    textarea,
    input[type="date"],
    input[type="file"],
    select {
        width: 200px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Trường textarea */
    textarea {
        height: 80px;
        resize: vertical;
    }

    /* Trường input file */
    input[type="file"] {
        padding: 5px;
    }

    /* Hình ảnh minh họa nhỏ */
    img {
        margin-left: 10px;
        vertical-align: middle;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Nút submit */
    input[type="submit"] {
        width: 150px;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin: 0 auto;
        display: block;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }

    /* Link trở về */
    div a {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
    }

        div a:hover {
            text-decoration: underline;
        }
</style>
