@model BOOK.Models.SACH

@{
    ViewBag.Title = "Chitietsach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* Container chính */
    .container {
        width: 70%;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề chính */
    h2 {
        text-align: center;
        color: white;
        margin-bottom: 20px;
    }

    /* Thông tin sách */
    dl.dl-horizontal {
        padding: 10px 0;
        display: grid;
        grid-template-columns: 1fr 2fr;
        row-gap: 15px;
        margin-bottom: 20px;
    }

    dt {
        font-weight: bold;
        color: #555;
        text-align: left;
        padding-right: 20px;
    }

    dd {
        margin: 0;
        padding: 8px;
        background-color: cornflowerblue;
        border-radius: 4px;
    }

    /* Ảnh bìa */
    img {
        width: 100px;
        height: auto;
        border-radius: 4px;
    }

    /* Nút hành động */
    p {
        text-align: center;
        margin-top: 20px;
    }

    a {
        margin-left: 20px;
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Định dạng tiền tệ */
    .price {
        color: #e74c3c;
        font-weight: bold;
    }
</style>
<h2>Chitietsach</h2>


<div>
    <h4>SACH</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaSach)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaSach)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenSach)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GiaBan)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.GiaBan)*@
            @String.Format("{0:0,0}", Model.GiaBan) VND
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnhBia)
        </dt>

        <dd>
            <img style="width:40px; height:30px" src="~/Content/img/@Model.CHUDE.TenChuDe/@Model.TenSach/@Model.AnhBia" />

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayCapNhat)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SoLuongTon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>

        <dt>
            Chủ đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUDE.TenChuDe)
        </dd>

        <dt>
            Nhà xuất bản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHAXUATBAN.TenNXB)
        </dd>

        <dt>
            Tác giả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TACGIA.TenTG)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa sách", "Suasach", new { id = Model.MaSach }) |
    @Html.ActionLink("Trở về", "Sach")
</p>
