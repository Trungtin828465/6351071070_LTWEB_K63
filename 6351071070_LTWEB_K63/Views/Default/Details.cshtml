@model BOOK.Models.SACH
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_LayoutPage.cshtml";
}
<h1>Thong tin chi tiet sach</h1>
<div id="templatemo_content_right">

    <h1>@Model.TenSach </h1>
    <div class="image_panel">  <img alt="@Model.TenSach" src="~/Content//img/@Model.CHUDE.TenChuDe/@Model.TenSach/@Model.AnhBia" width="100" height="150" /></div>
    <h2>Read the lessons - Watch the videos - Do the exercises</h2>
    <ul>
        <li>Price: <a href="#">@Model.GiaBan</a></li>
        <li>Ngay cap nhat @Model.NgayCapNhat</li>
        <li>So luong ton: @Model.SoLuongTon</li>

    </ul>
    <span>@Model.MoTa</span>
    <div id="Datmua">
        <a href="@Url.Action("ThemGiohang", "GioHang", new { iMasach = @Model.MaSach, strURL = Request.Url.ToString() })">
            ĐẶT MUA
        </a>
    </div>

</div>
